<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p class='user-name'><%= @user.name %></p>
      <span><%= link_to "View my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render partial: 'common_pages/follow_detail', :locals => {following: false}%>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>